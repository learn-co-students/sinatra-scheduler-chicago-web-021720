<h1> Current Schedule </h1>
<h3> Cannot exceed 16 credits. Currently scheduled for <%= @credits %> credits. </h3>
<% @courses.each do |c| %>
    <% if c.schedule %>
        <h3>Course: <a href="/schedule/<%= c.id %>"> <%= c.name %></a></h3>
        <h4>Professor: <%= c.professor %></h4>
        <h4>Credits: "<%= c.credits %>"</h4>
        <h4><a href="/schedule/<%= c.id %>">Unschedule</a></h4>    
        <hr>
    <% end %>
<% end %>


<h1> Schedule Courses </h1>
<% @courses.each do |course| %>
    <% if !course.schedule %>
        <h3>Course: <%= course.name %></h3>
        <h4>Professor: <%= course.professor %></h4>
        <h4>Credits: "<%= course.credits %>"</h4>
        <h4><a href="/schedule/<%= course.id %>">Schedule</a></h4>    
        <hr>
    <% end %>
<% end %>